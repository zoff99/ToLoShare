<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:minHeight="?attr/actionBarSize"
        android:paddingLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_normal_main_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="gallery view"
            android:textOn="main view"
            android:tooltipText="toogle map view"
            app:showText="false"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_friend_gps_smoothing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="gallery view"
            android:textOn="main view"
            android:tooltipText="toogle friend GPS smoothing"
            app:showText="false"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_own_gps_smoothing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="gallery view"
            android:textOn="main view"
            android:tooltipText="toogle own GPS smoothing"
            app:showText="false"
            tools:ignore="HardcodedText" />

        <Spinner
            android:id="@+id/spinner_own_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginLeft="0dp"
            android:paddingLeft="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:paddingLeft="0dp"
            android:text="@string/app_name"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="18sp"
            android:visibility="gone"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <!-- the layout which will contain (host) the drawerLayout -->
    <FrameLayout
        android:id="@+id/drawer_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/waiting_container"
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:background="@color/md_white_1000"
                android:visibility="visible">

                <TextView
                    android:id="@+id/waiting_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="40dp"
                    android:background="@color/md_white_1000"
                    android:gravity="center"
                    android:text="@string/layout___waiting_for_orbot"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/waiting_image"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:indeterminate="true"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/normal_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible"
                    tools:context="com.zoffcc.applications.trifa.MainActivity">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:id="@+id/icon_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/main_maintext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="..."
                                android:textColor="@color/md_black_1000"
                                android:textSize="12sp"
                                android:visibility="visible"
                                tools:ignore="HardcodedText" />

                            <ImageView
                                android:id="@+id/main_maintopimage"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_margin="0dp"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="0dp"
                                android:scaleType="fitStart"
                                android:src="@null"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/main_maintopimage2"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_margin="0dp"
                                android:paddingLeft="5dp"
                                android:paddingTop="0dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="0dp"
                                android:scaleType="fitStart"
                                android:src="@null"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/main_maintopimage3"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_margin="0dp"
                                android:paddingLeft="5dp"
                                android:paddingTop="0dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="0dp"
                                android:scaleType="fitStart"
                                android:src="@drawable/about_icon_github"
                                android:visibility="visible" />
                        </LinearLayout>

                    </RelativeLayout>

                    <fragment
                        android:id="@+id/fl_fragment"
                        android:name="com.zoffcc.applications.trifa.FriendListFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:layout="@layout/friend_list_layout" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/main_gallery_container"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_weight="5"
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_background"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/debug_text"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="..."
                            android:textColor="@color/md_black_1000"
                            android:textSize="10sp"
                            android:visibility="visible"
                            tools:ignore="HardcodedText" />

                        <ImageButton
                            android:id="@+id/btn_follow_self"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:cropToPadding="true"
                            android:padding="0dp"
                            android:layout_marginRight="6dp"
                            android:alpha="0.5"
                            android:tooltipText="follow own position on map"
                            android:background="@drawable/transparent"
                            android:scaleType="centerInside"
                            android:src="@drawable/outline_arrow_circle_right_24" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="5"
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_background"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/debug_text_2"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="..."
                            android:textColor="@color/md_black_1000"
                            android:textSize="10sp"
                            android:visibility="visible"
                            tools:ignore="HardcodedText" />

                        <ImageButton
                            android:id="@+id/btn_follow_friend_0"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:cropToPadding="true"
                            android:padding="0dp"
                            android:layout_marginRight="6dp"
                            android:alpha="0.5"
                            android:tooltipText="follow this friends positon on map"
                            android:background="@drawable/transparent"
                            android:scaleType="centerInside"
                            android:src="@drawable/outline_arrow_circle_right_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="5"
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_background"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/debug_text_3"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="..."
                            android:textColor="@color/md_black_1000"
                            android:textSize="10sp"
                            android:visibility="visible"
                            tools:ignore="HardcodedText" />

                        <ImageButton
                            android:id="@+id/btn_follow_friend_1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:cropToPadding="true"
                            android:padding="0dp"
                            android:layout_marginRight="6dp"
                            android:alpha="0.5"
                            android:tooltipText="follow this friends positon on map"
                            android:background="@drawable/transparent"
                            android:scaleType="centerInside"
                            android:src="@drawable/outline_arrow_circle_right_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="5"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_background"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/dummy999"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text=""
                            android:visibility="visible"
                            tools:ignore="HardcodedText" />

                        <ImageButton
                            android:id="@+id/btn_follow_stop"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:cropToPadding="true"
                            android:padding="0dp"
                            android:layout_marginRight="6dp"
                            android:alpha="0.5"
                            android:tooltipText="unpin map, do not follow anyone"
                            android:background="@drawable/transparent"
                            android:scaleType="centerInside"
                            android:src="@drawable/outline_cancel_24" />

                    </LinearLayout>

                </LinearLayout>

            <FrameLayout
                android:id="@+id/main_gallery_container_inside"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.osmdroid.views.MapView android:id="@+id/map"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </FrameLayout>

        </LinearLayout>

        </LinearLayout>



    </FrameLayout>

</RelativeLayout>


